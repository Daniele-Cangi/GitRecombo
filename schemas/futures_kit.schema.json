{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FuturesKit",
  "type": "object",
  "required": [
    "project",
    "sources",
    "concepts"
  ],
  "properties": {
    "project": {
      "type": "object",
      "required": [
        "name",
        "one_liner",
        "tagline",
        "vision"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "one_liner": {
          "type": "string"
        },
        "tagline": {
          "type": "string"
        },
        "vision": {
          "type": "string"
        },
        "why_now": {
          "type": "string"
        }
      }
    },
    "sources": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "name",
          "url",
          "license",
          "role"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "license": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "evidence": {
            "type": "string"
          }
        }
      }
    },
    "concepts": {
      "type": "array",
      "minItems": 2,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": [
          "codename",
          "problem",
          "solution",
          "why_it_works",
          "architecture_ascii",
          "first_milestone",
          "kpis_90d"
        ],
        "properties": {
          "codename": {
            "type": "string"
          },
          "problem": {
            "type": "string"
          },
          "solution": {
            "type": "string"
          },
          "why_it_works": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "architecture_ascii": {
            "type": "string"
          },
          "modules": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "novelty_levers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "differentiators": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "risks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "mitigations": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "first_milestone": {
            "type": "string"
          },
          "timeline_90d": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "kpis_90d": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "gtm": {
            "type": "object",
            "properties": {
              "icp": {
                "type": "string"
              },
              "channels": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "pricing_hypothesis": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}